	    public static void Main(){
	        var random = new Random();
	        var seireki = random.Next(0, 63) + 1926;    //0~62のランダム+1926で西暦に
	        Console.Write("西暦" + seireki + "年は");
	        // 昭和年を計算
	        var showa = seireki - 1925;         //昭和年=showa-1925
	        Console.WriteLine("昭和" + showa + "年です");
	    }
	}
